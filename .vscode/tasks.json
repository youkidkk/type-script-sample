{
    "version": "2.0.0",
    "tasks": [{
        "label": "build",
        "type": "typescript",
        "tsconfig": "tsconfig.json",
        "problemMatcher": [
            "$tsc"
        ],
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "dependsOn": [
            "clean"
        ]
    }, {
        "label": "clean",
        "type": "shell",
        "windows": {
            "command": "Remove-Item",
            "args": [
                "-Recurse",
                "-Force",
                "./build/*",
                "-Exclude",
                ".gitkeep"
            ]
        }
    }]
}